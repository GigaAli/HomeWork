<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List Application" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="To-Do List" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

            
            <TextBox x:Name="txtTaskName" Width="200" Height="30" />

            <Button Content="Add Task" Click="AddTask_Click" Width="100" Margin="0,0,0,10"/>

            <ListBox x:Name="lstTasks" Width="300" Height="150" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Remove Task" Click="RemoveTask_Click" Width="100" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>



